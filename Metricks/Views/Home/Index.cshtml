@model Metricks.Models.MetricRequestViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Metricks</h1>
    <p class="lead">Metricks is a free reaction metric calculator for synthetic chemical reactions.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Inputs</h2>
        <p>
            Input the names and masses of your reagents and product. Please make sure that you are using the same mass units for all of your reagents and your product.
        </p>

        @using (Html.BeginForm("Calculate", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.ReagentName, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ReagentName, new { @class = "form-control" })
                </div>
                @Html.LabelFor(m => m.ReagentMass, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ReagentMass, new { @class = "form-control" })
                </div>
                @Html.LabelFor(m => m.ProductName, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                </div>
                @Html.LabelFor(m => m.ProductMass, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ProductMass, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" class="btn btn-default" value="Calculate" />
                </div>
            </div>
        }

        @{
            if (!string.IsNullOrEmpty(ViewBag.Result))
            {
                <h2>Results</h2>
                <h4>Process Mass Intensity (PMI)</h4>
                
                @ViewBag.Result
       
            }
        }


    </div>
</div>

   

